{
  "include": [
    "src/**/*.json",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  }
}
